<script type="text/javascript">
	$(function() { 	
		$('a.scrollUp').click(function(){
			$('body,html').animate({scrollTop:0});
		})

        $(document).on('click ','#dlbtn01', function() {
            let urlstr = 'downLoad.php?searchkeydl01='+$("#searchkeydl01").val();
            window.location = urlstr;
        });
	});
	window.onload=function(){
	    $(".close-div").on('click', function(){
	        $(".modal-back").fadeOut();
	    });
	    $(document).on('click', '.bnlDownload', function(){
    	    let msg = "BNL是點讀筆音檔，電腦和手機不能播放！";
    	    $("#fileNotice").html(msg);
    	    $(".modal-back").fadeIn();
    	    let downloadUrl = this.id;
    	    $("#copyrightClose").on('click', function(){
	            $(".modal-back").fadeOut();
	            window.location.href= downloadUrl;
	        });
        });
        $(document).on('click', '.cdDownload', function(){
    	    let msg = "CD音檔下載之後請先解壓縮！";
    	    $("#fileNotice").html(msg);
    	    $(".modal-back").fadeIn();
    	    let downloadUrl = this.id;
    	    $("#copyrightClose").on('click', function(){
	            $(".modal-back").fadeOut();
	            window.location.href= downloadUrl;
	        });
        });
	}
</script>
<style>
    .tooltip{
        position: relative;
        display: inline-block
        width: 100%;
    }
    .tooltip .tooltiptext{
        visibility: hidden;
        background-color: black;
        color: white;
        text-align: left;
        border-radius: 5px;
        position: absolute;
        z-index: 1;
        padding: 2px 2px 2px 2px;
        bottom: 100%;
        left: 35%;
    }
    .tooltip:hover .tooltiptext{
        visibility: visible;
    }
    .bookname{
        font-weight: bold;
        font-size: 16px;
        color: darkblue;
        background: rgb(245,245,245);
    }
    .bnlDownload .cdDownload{
        cursor: pointer;
    }
    
    /* 版權聲明 */
    .modal-back{
        position: fixed;
        background: rgba(0, 0, 0, 0.7);
        width: 100%;
        height: 100%;
        z-index: 2;
        display: none;
    }
    .modal-content{
        -webkit-user-select: none;  /* Chrome all / Safari all */
        -moz-user-select: none;     /* Firefox all */
        -ms-user-select: none;      /* IE 10+ */
        user-select: none;          /* Likely future */
        
        position: relative;
        background: white;
        
        margin-left: auto;
        margin-right: auto;
        top: 50%;
	    -ms-transform: translateY(-50%);
	    transform: translateY(-50%);
	    width: 80%;
	    height: 70%;
    }
    .modal-title{
        width: 100%;
        font-size: 2rem;
        font-weight: bold;
        height: 15%;
        color: white;
        background: skyblue;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .modal-para{
        font-size: 1.5rem;
        line-height: 2rem;
        padding: 2% 2%;
        text-align: left;
    }
    .close-btn{
        position: fixed;
        text-align: center;
        bottom: 0;
        width: 100%;
        padding-bottom: 2%;
    }
    .close-btn button{
        font-size: 1.5rem;
        border: 1px solid navy;
        background: navy;
        font-weight: bold;
        color: white;
        padding: 0.5% 2%;
        border-radius: 15px;
        cursor: pointer;
    }
    .close-btn button:hover{
        background: rgba(0, 255, 255, 0.1);
        color: red;
    }
    .close-div{
        position: fixed;
        right: 0;
        top: 0;
        height: 14%;
        color: white;
        background: navy;
        font-size: 1.5rem;
        line-height: 1.5rem;
        border: 2px solid navy;
        
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>
